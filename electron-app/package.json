{
    "name": "historical-doc-processor",
    "version": "1.0.0",
    "description": "Electron interface for Historical Document Processing Pipeline",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder"
    },
    "author": "Valerii Shevchenko",
    "license": "ISC",
    "dependencies": {
        "js-yaml": "^4.1.0"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.konspektos.hdp",
        "productName": "Konspekt HDP",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!dist/**/*",
            "!**/*.py",
            "!**/__pycache__/**"
        ],
        "extraResources": [
            {
                "from": "../dist/process_pipeline",
                "to": "python",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "mac": {
            "target": "pkg"
        },
        "pkg": {
            "scripts": "build/pkg-scripts",
            "allowAnywhere": true,
            "isRelocatable": false
        },
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}